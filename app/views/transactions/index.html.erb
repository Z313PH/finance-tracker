<p style="color: green"><%= notice %></p>

<% content_for :title, "Transactions" %>

<h1>Transactions</h1>

<h2>Finance Summary</h2>
<ul>
  <li>Total Income: <%= number_to_currency(@income) %></li>
  <li>Total Expenses: <%= number_to_currency(@expenses) %></li>
  <li><strong>Balance:</strong> <%= number_to_currency(@balance) %></li>
</ul>

<div id="transactions">
  <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
      <tr style="background-color: #f0f0f0;">
        <th>Title</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Occurred on</th>
        <th>Notes</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.title %></td>
          <td style="color: <%= transaction.amount.to_f < 0 ? 'red' : 'green' %>;">
            <%= number_to_currency(transaction.amount) %>
          </td>
          <td><%= transaction.category %></td>
          <td><%= transaction.occurred_on.strftime("%B %d, %Y") %></td>
          <td><%= transaction.notes %></td>
          <td><%= link_to "Show", transaction_path(transaction) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to "New transaction", new_transaction_path %>
