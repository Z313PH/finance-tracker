<%= form_with model: transaction, local: true do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, ['Income', 'Expense', 'Savings', 'Giving'], prompt: "Select a category" %>
  </div>

  <div class="field">
    <%= f.label :occurred_on %><br>
    <%= f.date_select :occurred_on %>
  </div>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
